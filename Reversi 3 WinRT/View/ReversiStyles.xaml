<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Reversi_WinRT.View">

    <Style x:Key="NormalGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style x:Key="NarrowGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
        <Setter Property="Margin" Value="-40,0,-40,0" />
    </Style>
    <Style x:Key="VeryNarrowGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
        <Setter Property="Margin" Value="-80,0,-80,0" />
    </Style>
    <Style x:Key="VeryNarrowHeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextBlockStyle}">
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
